# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_separator = "#FFFFFF"
}

# order += "ipv6"
# order += "disk /"
order += "run_watch DHCP"
# order += "run_watch VPN"
order += "ethernet eth0"
order += "wireless wlan1"
order += "battery 1"
# order += "load"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

wireless wlan1 {
        format_up = "%essid: %quality [%ip]"
        format_down = "No wifi"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "Eth: %ip"
        format_down = "No eth"
}

battery 1 {
        format = "%status %percentage %remaining"
        format_down = "No bat"
        color_good = "#00FF00"
        color_bad = "#00FF00"
        color_good = "#00FF00"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%b-%d %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
volume master {
        format = "♪: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
