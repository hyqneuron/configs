# i3status configuration file.
# see "man i3status"  for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_separator = "#FFFFFF"
        color_bad = '#ff0000'
}

order += "net_rate"
# order += "ethernet enp2s0"
order += "wireless enx18a6f71813fc" #wlxc46e1f235598
# order += "wifi_info"
order += "cpu_usage"
order += "tmem_info"
order += "volume master"
order += "battery 1"
order += "tztime local"

ethernet enp2s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "  Eth: %ip  "
        format_down = "  No eth  "
}
wireless enx18a6f71813fc {
        format_up = "  %essid: %quality [%ip]  "
        format_down = "  No wifi  "
}

battery 1 {
        format = "  %status %percentage %remaining  "
        format_down = "No bat"
        color_good = "#00FF00"
        color_bad = "#00FF00"
        color_good = "#00FF00"
}

cpu_usage {
        format = "  CPU %usage  "
}


volume master {
        format = "  V %volume  "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "  %b-%d %H:%M  "
}
