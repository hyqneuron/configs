# i3status configuration file.
# see "man i3status"  for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_separator = "#FFFFFF"
        color_bad = '#ff0000'
}

order += "run_watch DHCP"
order += "ethernet eth0"
order += "wireless wlan1"
order += "battery 1"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
        format = "  %title: %status  "
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "  Eth: %ip  "
        format_down = "  No eth  "
}
wireless wlan1 {
        format_up = "  %essid: %quality [%ip]  "
        format_down = "  No wifi  "
}

battery 1 {
        format = "  %status %percentage %remaining  "
        format_down = "No bat"
        color_good = "#00FF00"
        color_bad = "#00FF00"
        color_good = "#00FF00"
}

cpu_usage {
        format = "  C %usage  "
}


volume master {
        format = "  V %volume  "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "  %b-%d %H:%M  "
}
